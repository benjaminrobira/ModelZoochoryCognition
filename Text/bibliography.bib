doi = {10.1111/ele.12660},
issn = {14610248},
journal = {Ecology Letters},
keywords = {Animal movement,L{\'{e}}vy walks,composite correlated random walks,foraging ecology,random walks,search behaviour},
number = {11},
pages = {1299--1313},
