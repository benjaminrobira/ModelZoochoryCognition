journal = {Animal Cognition},
keywords = {Animal navigation,Capuchin monkeys,Route network system,Spatial analysis,Spatial cognition},
number = {3},
pages = {393--405},
pmid = {29532262},
publisher = {Springer},
title = {{Intersection as key locations for bearded capuchin monkeys (Sapajus libidinosus) traveling within a route network}},
volume = {21},
year = {2018}
}

